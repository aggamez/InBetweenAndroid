<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity5">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg3"
            android:scaleType="fitXY"
            android:id="@+id/bg1"/>

    <Button
            android:text="@string/btnDraw"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="330dp"
            android:id="@+id/btnDraw"/>

    <Button
            android:text="@string/btnBet"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnBet"/>

    <Button
            android:text="@string/btnFold"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginStart="510dp"
            android:id="@+id/btnFold"/>

    <Button
            android:text="@string/btnHigher"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnHigher"/>

    <Button
            android:text="@string/btnLower"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="510dp"
            android:id="@+id/btnLower"/>

    <Button
            android:text="@string/btnReset"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="350dp"
            android:id="@+id/btnReset"/>

    <Button
            android:text="@string/btnReveal"
            android:visibility="gone"
            android:background="@drawable/btn"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:id="@+id/btnReveal"/>

    <TextView
            android:text=""
            android:background="@drawable/viewbg"
            android:layout_marginTop="23dp"
            android:layout_marginStart="240dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>

    <TextView
            android:text="@string/txtPotMoney"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/textView4"/>

    <ImageView
            android:src="@drawable/baccard"
            android:layout_marginTop="75dp"
            android:layout_width="250dp"
            android:layout_height="250dp" android:id="@+id/card1"/>

    <ImageView
            android:src="@drawable/baccard"
            android:layout_marginTop="75dp"
            android:layout_width="250dp"
            android:layout_marginStart="480dp"
            android:layout_height="250dp" android:id="@+id/card2"/>

    <ImageView
            android:src="@drawable/baccard"
            android:layout_marginTop="75dp"
            android:layout_width="250dp"
            android:layout_marginStart="240dp"
            android:layout_height="250dp" android:id="@+id/card3"/>


</RelativeLayout>