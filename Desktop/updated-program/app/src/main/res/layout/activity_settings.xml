<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <Button android:text="@string/volumeUp"
            android:layout_toEndOf="@id/volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/settings"
            android:layout_marginStart="15dp"
            android:layout_marginTop="156dp"
            android:textSize="30sp"
            android:paddingBottom="3dp"
            android:id="@+id/btnVolumeUp"
            tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="312dp"/>

    <Button android:text="@string/volumeDown"
            android:layout_toEndOf="@id/btnVolumeMute"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="156dp"
            android:background="@drawable/settings"
            android:paddingBottom="4dp"
            android:id="@+id/btnVolumeDown"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="178dp"/>

    <Button android:layout_marginStart="225dp"
            android:drawableStart="@drawable/ic_round_volume_mute_24"
            android:paddingStart="10dp"
            android:layout_marginTop="156dp"
            android:paddingEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/settings"
            android:id="@+id/btnVolumeMute"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="178dp"/>

    <Button android:layout_toEndOf="@id/btnVolumeUp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="156dp"
            android:drawableStart="@drawable/ic_round_volume_up_24"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/settings"
            android:id="@+id/btnVolumeMax"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="178dp"/>

    <TextView
            android:text="10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="138dp"
            android:id="@+id/volume"/>

    <Button android:text="@string/resetData"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="240dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings"
            android:id="@+id/btnResetData"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="178dp"/>

    <Button android:text="@string/exitSettings"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="350dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings"
            android:id="@+id/btnExitSettings"
            tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="178dp"/>



</RelativeLayout>