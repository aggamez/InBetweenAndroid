<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity4">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bghome"
            android:scaleType="fitXY"
            android:id="@+id/bg1"/>
    <Button
            android:text="@string/btnPlay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:background="@drawable/custombtn3"
            android:id="@+id/btnPlay" tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="312dp"/>
    <Button
            android:text="@string/btnHowToPlay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:background="@drawable/custombtn"
            android:id="@+id/btnHowToPlay" tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="312dp"/>
    <Button
            android:text="@string/btnExit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:background="@drawable/custombtn2"
            android:id="@+id/btnExit" tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="312dp"/>
</RelativeLayout>