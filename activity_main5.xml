<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity5">

    <Button
            android:text="@string/btnDraw"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="300dp"
            android:id="@+id/btnDraw"/>

    <Button
            android:text="@string/btnBet"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnBet"/>

    <Button
            android:text="@string/btnFold"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginStart="510dp"
            android:id="@+id/btnFold"/>

    <Button
            android:text="@string/btnHigher"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnHigher"/>

    <Button
            android:text="@string/btnLower"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="510dp"
            android:id="@+id/btnLower"/>

    <Button
            android:text="@string/btnReset"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="350dp"
            android:id="@+id/btnReset"/>

    <Button
            android:text="@string/btnReveal"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:id="@+id/btnReveal"/>

    <TextView
            android:text="@string/txtPotMoney"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"/>

    <Button
            android:text=" "
            android:layout_width="150dp"
            android:background="@drawable/custombtn"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="6dp"
            android:id="@+id/button11"/>


</RelativeLayout>